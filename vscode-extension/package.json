{
    "name": "vscode-extension",
    "displayName": "vscode-extension",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.61.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:vscode-extension.splitClassNames"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "vscode-extension.splitClassNames",
                "title": "Split long classNames"
            }
        ],
        "configuration": [
            {
                "title": "classNames splitter",
                "properties": {
                    "vscode-extension.runOnSave": {
                        "type": "boolean",
                        "items": {
                            "type": "string"
                        },
                        "default": false,
                        "description": "Run on save"
                    }
                }
            }
        ],
        "keybindings": [
            {
                "key": "",
                "command": "vscode-extension.splitClassNames"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn run build",
        "build": "esno scripts/build",
        "watch": "WATCH=1 esno scripts/build",
        "play": "code --extensionDevelopmentPath=`pwd` -n `pwd`/../codemod",
        "pretest": "yarn run build",
        "test": "node ./dist/test/runTest.js"
    },
    "devDependencies": {
        "codemod-split-classnames": "workspace:^0.0.0",
        "@types/vscode": "^1.61.0",
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.17.27",
        "glob": "^7.1.7",
        "mocha": "^9.1.3",
        "typescript": "^4.4.4",
        "@vscode/test-electron": "^1.6.2"
    }
}
